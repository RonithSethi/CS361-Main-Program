<div class="home-outer">
    <div class="back-button">
        <p class="back-text">
            <a class="back-text-anchor" href="/">
                &larr; Back
            </a>
        </p>
    </div>

    {{!-- <img src="images/gala-apple-tree.jpg" alt="Gala Apple" class="food-image"> --}}
    <div class="nutrition-box">
        <div class="nutrition-first-header">
            <h1 class="food-name">{{name}}</h1>
            <h2 class="usda-link">
                <a
                    href="https://fdc.nal.usda.gov/food-details/{{fdcId}}/nutrients"
                    target="_blank"
                >
                    info from USDA
                </a>
            </h2>
        </div>
        <div class="nutrition-body">
            <h2 class="nutrition-header">Main information: (per 100g)</h1>
            <p class="nutrition-info"><strong>Calories</strong>: {{Energy}}</p>
            <p class="nutrition-info"><a href="/nutrients">Fat</a>: {{[Total lipid (fat)]}}g</p>
            <p class="nutrition-info"><a href="/nutrients">Carbohydrates</a>: {{[Carbohydrate, by difference]}}g</p>
            <p class="nutrition-info">Fiber: {{[Fiber, total dietary]}}g</p>
            <p class="nutrition-info">Sugar: {{[Sugars, Total]}}g</p>
            <p class="nutrition-info"><a href="/nutrients">Protein</a>: {{Protein}}g</p>
            <p class="nutrition-info">Sodium: {{[Sodium, Na]}}mg</p>
            <br>
            <br>
            <h2 class="advanced-header">Advanced information:</h1>
            <p class="nutrition-info">Water: {{Water}}g</p>
            <p class="nutrition-info">Sucrose: {{[Sucrose]}}g</p>
            <p class="nutrition-info">Glucose: {{[Glucose]}}g</p>
            <p class="nutrition-info">Fructose: {{[Fructose]}}g</p>
            <p class="nutrition-info">Calcium: {{[Calcium, Ca]}}g</p>
            <p class="nutrition-info">Iron: {{[Iron, Fe]}}g</p>
            <p class="nutrition-info">Magnesium: {{[Magnesium, Mg]}}g</p>
        </div>
    </div>
</div>
